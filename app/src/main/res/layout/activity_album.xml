<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:cal="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="co.yishun.onemoment.app.ui.AlbumActivity"
              android:background="@color/bgColorRecordHeader"
        >

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/abc_action_bar_default_height_material"
            />


    <FrameLayout
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--<ImageButton-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:minHeight="48dp"-->
        <!--android:minWidth="48dp"-->
        <!--android:src="@drawable/ic_overflow"-->
        <!--android:background="@null"-->
        <!--/>-->
        <LinearLayout
                android:id="@+id/backToToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:background="@drawable/abc_item_background_holo_light"
                >

            <TextView
                    android:id="@+id/calendarCurrentDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textStyle="bold"
                    android:textSize="64dp"
                    android:textColor="@color/textColorCalenderCurrentDay"
                    />

            <TextView
                    android:id="@+id/calendarDayOfWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="星期日"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/textColorCalenderDayOfWeek"
                    />
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingBottom="8dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calenderTextCalenderTileNum1"
                    android:textColor="@android:color/white"
                    />

            <TextView
                    android:id="@+id/titleOfCalender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="@color/textColorCalenderTileNum"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calenderTextCalenderTileNum2"
                    android:textColor="@android:color/white"
                    />
        </LinearLayout>
    </FrameLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            >

        <com.squareup.timessquare.CalendarPickerView
                android:id="@+id/calendarPickerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgColorRecordHeader"
                cal:dayBackground="@color/bgColorCalenderDay"
                cal:dayTextColor="@android:color/white"
                />
    </FrameLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            />

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="32dp"
            android:paddingLeft="32dp"
            android:gravity="center_vertical"
            android:layout_weight="1">


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:text="Shot"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/shootingBtn"
                android:drawableTop="@drawable/abc_btn_radio_material"
                android:background="@drawable/abc_item_background_holo_light"
                />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:text="Replay"
                android:id="@+id/replayBtn"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:drawableTop="@drawable/abc_btn_radio_material"
                android:background="@drawable/abc_item_background_holo_light"
                />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:text="World"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/enterWorldBtn"
                android:drawableTop="@drawable/abc_btn_radio_material"
                android:background="@drawable/abc_item_background_holo_light"
                />
    </RelativeLayout>

</LinearLayout>
